{
  "schema": "v2",
  "id": "huggingface",
  "label": "Hugging Face",
  "description": "Authenticate with Hugging Face using access tokens. Access models, datasets, and Spaces.",
  "identity": {
    "label": "Account",
    "hint": "e.g., personal, organization name"
  },
  "methods": {
    "token": {
      "label": "Access Token",
      "register": {
        "url": "https://huggingface.co/settings/tokens",
        "steps": [
          "Go to Settings > Access Tokens",
          "Create a new token (read, write, or full access as needed)",
          "Copy the token"
        ]
      },
      "script": [
        { "type": "copy_key", "note": "Paste your Hugging Face access token" }
      ]
    }
  },
  "apis": {
    "rest": {
      "base_url": "https://huggingface.co/api",
      "auth_header": "Authorization: Bearer {token}",
      "docs_url": "https://huggingface.co/docs",
      "spec_url": "https://huggingface.co/docs/api",
      "spec_type": "openapi",
      "methods": ["token"]
    },
    "inference": {
      "base_url": "https://api-inference.huggingface.co",
      "auth_header": "Authorization: Bearer {token}",
      "docs_url": "https://huggingface.co/docs/inference",
      "methods": ["token"]
    }
  }
}
