{
  "schema": "v2",
  "id": "notion",
  "label": "Notion",
  "description": "Authenticate with Notion using OAuth authorization code flow. Access pages, databases, and workspace content.",
  "clients": [
    {
      "name": "notion-mobile",
      "id": "YOUR_CLIENT_ID",
      "secret": "YOUR_CLIENT_SECRET",
      "type": "public",
      "source": "https://github.com/notionhq/notion-sdk-js",
      "methods": ["oauth"]
    }
  ],
  "identity": {
    "label": "Workspace",
    "hint": "The workspace name or leave empty for personal"
  },
  "methods": {
    "oauth": {
      "label": "OAuth",
      "endpoints": {
        "authorize": "https://api.notion.com/v1/oauth/authorize",
        "token": "https://api.notion.com/v1/oauth/token"
      },
      "scope": "authorization_code",
      "register": {
        "url": "https://www.notion.so/my-integrations",
        "steps": [
          "Click 'New integration' or 'Develop or manage integrations'",
          "Name your integration and select capabilities",
          "Copy the Client ID and Client Secret",
          "Add the integration to your pages/databases"
        ]
      },
      "script": [
        { "type": "open_url", "value": "{authorize_url}" },
        { "type": "wait_for_callback" }
      ]
    }
  },
  "apis": {
    "rest": {
      "base_url": "https://api.notion.com/v1",
      "auth_header": "Authorization: Bearer {token}",
      "docs_url": "https://developers.notion.com",
      "spec_url": "https://raw.githubusercontent.com/NotionX/react-notion-x/master/packages/notion-client/src/api-endpoints.json",
      "spec_type": "openapi",
      "methods": ["oauth"]
    }
  }
}
