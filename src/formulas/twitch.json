{
  "schema": "v2",
  "id": "twitch",
  "label": "Twitch",
  "description": "Authenticate with Twitch using OAuth device code flow. Access Twitch API for streams, users, and extensions.",
  "apis": {
    "helix": {
      "base_url": "https://api.twitch.tv/helix",
      "auth_header": "Authorization: Bearer {token}",
      "docs_url": "https://dev.twitch.tv/docs/api",
      "methods": ["device_code"]
    }
  },
  "clients": [
    {
      "name": "twitch-cli",
      "id": "YOUR_CLIENT_ID",
      "secret": "YOUR_CLIENT_SECRET",
      "source": "https://dev.twitch.tv/docs/authentication/device-authorization-grant",
      "methods": ["device_code"]
    }
  ],
  "identity": {
    "label": "Client",
    "hint": "Use your Twitch client ID"
  },
  "methods": {
    "device_code": {
      "endpoints": {
        "device": "https://id.twitch.tv/oauth2/device",
        "token": "https://id.twitch.tv/oauth2/token"
      },
      "scope": "user:read:email channel:read:subscriptions bits:read moderation:read",
      "script": [
        { "type": "open_url", "value": "{verification_uri}" },
        { "type": "enter_code", "value": "{user_code}" },
        { "type": "wait_for_token" }
      ]
    }
  }
}
